<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		<link rel="stylesheet" href="https://bootswatch.com/5/sandstone/bootstrap.min.css">
		<link rel="stylesheet" href="/css/style.css">
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
		<script src="/js/jquery.js"></script>

		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<div class="container">
			<div class="row">
				<div class="col-12">
					<nav class="navbar navbar-expand-lg navbar-light bg-light">
						<div class="container-fluid">
							<a class="navbar-brand" href="https://www.youtube.com/watch?v=DcHKOC64KnE">VG</a>
							<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
								<span class="navbar-toggler-icon"></span>
							</button>
							<div class="collapse navbar-collapse" id="navbarSupportedContent">
								<ul class="navbar-nav me-auto mb-2 mb-lg-0">
									<li class="nav-item">
										<a class="nav-link" aria-current="page" href="{{ path("accueil") }}">Produits</a>
									</li>
									
								</ul>
                                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
									<li class="nav-item">
										{% set sum = 0 %}    
										{% for a in app.session.get("panier") %}            
											{% set sum = sum + a.quantite %}        
										{% endfor %}    
										<a class="nav-link" href="{{ path("panier") }}">Panier ({{ sum }})</a>
									</li>
									<li class="nav-item">
										<a class="nav-link" href="{{ path("accueil") }}">Se connecter</a>
									</li>
								</ul>
							</div>
						</div>
					</nav>
		            {% block body %}{% endblock %}
				</div>
			</div>
		</div>
	</body>
</html>
